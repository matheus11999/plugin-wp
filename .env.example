# LinkGate API Server Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
BACKEND_DOMAIN=https://wp.mikropix.online

# Security Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://anotherdomain.com

# JWT Secret (if using JWT in future)
JWT_SECRET=your-super-secret-jwt-key-here

# Database Configuration (if using database in future)
DATABASE_URL=mongodb://localhost:27017/linkgate
# or for PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/linkgate

# Redis Configuration (for caching in production)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/linkgate-api.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
VERIFY_RATE_LIMIT_MAX=10

# SSL Configuration (if serving HTTPS directly)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Analytics Configuration (optional)
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.linkgate.com/api/events

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_ENDPOINTS=https://yourapp.com/webhooks/linkgate

# Admin Configuration
ADMIN_API_KEY=your-admin-api-key-for-management
ADMIN_EMAIL=admin@linkgate.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=false
ENABLE_ADMIN_API=true
ENABLE_TOKEN_REFRESH=true

# Performance Configuration
MAX_CACHE_SIZE=1000
CACHE_TTL_SECONDS=300
REQUEST_TIMEOUT_MS=30000

# Development Configuration
DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=false
MOCK_TOKEN_VALIDATION=false